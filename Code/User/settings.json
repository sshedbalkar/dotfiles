{
    "github.copilot.advanced": {

    },
    "github.copilot.chat.agent.runTasks": false,
    "github.copilot.chat.codeGeneration.useInstructionFiles": false,
    "github.copilot.chat.followUps": "never",
    "github.copilot.enable": {
        "*": false,
        "plaintext": false,
        "markdown": false,
        "scminput": false
    },
    "C_Cpp.default.compilerPath": "/usr/bin/g++",
    "cmake.configureOnOpen": true,
    "linesinfostatusbar.totalDisplayFormat": "Total: %d",
    "cmake.options.statusBarVisibility": "visible",
    "cmake.showOptionsMovedNotification": false,
    "autoHide.autoHideSideBar": true,
    "editor.rulers": [80],
    "editor.renderWhitespace": "all",
    "editor.wordWrap": "on",
    "editor.wordWrapColumn": 80,
    "workbench.editor.splitInGroupLayout": "vertical",
    "workbench.editor.revealIfOpen": true,
    "workbench.colorTheme": "Visual Studio Dark - C++",
    //"workbench.editor.wrapTabs": true,
    "workbench.colorCustomizations": {
        // Refer: https://code.visualstudio.com/api/references/theme-color
        "[Visual Studio Dark - C++]": {
            "editor.background": "#020202",
            "editorGroup.border": "#424242",
            "sideBar.background": "#020202",
            "sideBar.border": "#424242",
            "titleBar.border": "#ff0000",
            "activityBar.background": "#020202",
            "editorGroupHeader.tabsBackground": "#424242",
            "tab.activeBackground": "#0170bb",
            "tab.unfocusedActiveBackground":"#004A7C",
            "tab.inactiveBackground": "#151515",
            "tab.unfocusedInactiveBackground": "#222222",
            "editorRuler.foreground":"#151515",
            "window.activeBorder":"#ff0000",
            "panel.border": "#424242"
        }
    },
    "accessibility.dimUnfocused.enabled": true,
    "accessibility.dimUnfocused.opacity": 0.8,
    "editor.fontFamily": "'Consolas', 'Droid Sans Mono', 'monospace', monospace",
    "gotoNextPreviousMember.symbolKinds": [
        "array",
        "boolean",
        "class",
        "constant",
        "constructor",
        "enum",
        // "enummember",
        "event",
        // "field",
        "file",
        "function",
        "interface",
        "key",
        "method",
        "module",
        "namespace",
        "null",
        "number",
        "object",
        "operator",
        "package",
        "property",
        "string",
        "struct",
        "typeparameter",
        "variable"
    ],
    "gotoNextPreviousMember.previousMember": "ctrl+up",
    "gotoNextPreviousMember.nextMember": "ctrl+down",
    "cmake.pinnedCommands": [
        "workbench.action.tasks.configureTaskRunner",
        "workbench.action.tasks.runTask"
    ],
    "files.exclude": {
        "**/.git": false
    }
}